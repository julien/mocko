{
  "env": {
    "browser": true,
    "node": true
  },

  "globals": {
    "Promise": true,
    "describe": true,
    "beforeEach": true,
    "afterEach": true,
    "it": true
  },

  "rules": {

    // Possible Errors

    "no-comma-dangle": 0,
    "no-cond-assign": 2,
    "no-console": 0,
    "no-constant-condition": 1,
    "no-control-regex": 0,
    "no-debugger": 2,
    "no-dupe-keys": 2,
    "no-empty": 2,
    "no-empty-class": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": 0,
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 0,
    "no-regex-spaces": 0,
    "no-reserved-keys": 2,
    "no-sparse-arrays": 0,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-jsdoc": 0,
    "valid-typeof": 2,

    // Best Practices

    "consistent-return": 2,
    "curly": 0,
    "dot-notation": 0,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-alert": 2,
    "no-caller": 2,
    "no-div-regex": 2,
    "no-else-return": 0,
    "no-empty-label": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-fallthrough": 2,
    "no-implied-eval": 2,
    "no-iterator": 2,
    "no-labels": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 0,
    "no-multi-str": 2,
    "no-native-reassign": 0,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-octal": 2,
    "no-octal-escape": 2,
    "no-proto": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-with": 2,
    "radix": 2,
    "wrap-iife": 2,
    "yoda": 2,

    // Strict Mode
    "no-extra-strict": 2,
    "strict": 2,

    // Variables
    "no-catch-shadow": 2,
    "no-delete-var": 2,
    "no-label-var": 2,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-use-before-define": 0,
    "no-underscore-dangle": 0,

    // Node.js
    "handle-callback-err": 0,
    "no-mixed-requires": 0,
    "no-process-exit": 0,
    "no-sync": 0,

    // Stylistic Issues
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "camelcase": 2,
    "comma-spacing": [2, {before: false, after: true}],
    "consistent-this": [0, "that"],
    "eol-last": 0,
    "func-style": 0,
    "key-spacing": [2, {beforeColon: false, afterColon: true}],
    "new-cap": 2,
    "new-parens": 2,
    "no-inline-comments": 2,
    "no-lonely-if": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": [1, {max: 2}],
    "no-nested-ternary": 0,
    "no-new-object": 2,
    "no-space-before-semi": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-wrap-func": 2,
    "quotes": [1, "single", "avoid-escape"],
    "semi": [2, "always"]
  }
}
